<script type="text/javascript">
var msj = "<%= notice %>";
  $(document).ready(function() {
  if(msj!='')
    swal(msj, "", "success")

});
</script>

<h1 class="text-center">Lista de Productos</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sustancia</th>
      <th>Presentacion</th>     
      <th>Laboratorio</th>
      <th>Plan paciente</th>
       <th>Oferta</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td width="12%"><%= producto.nombre %></td>
        <td width="12%"><%= producto.sustancium.descripcion %></td>
        <td width="12%"><%= producto.presentacion.descripcion %></td>       
        <td width="12%"><%= producto.laboratorio.nombre %></td>
        <% if producto.plan_paciente != nil %> 
           <td width="12%"><%= producto.plan_paciente.nombre %></td>
         <% else producto.plan_paciente != nil %> 
           <td width="12%"></td>
        <% end %>
        
        <td width="11%"><%= producto.oferta %></td>
        <td width="35%">
         <button type="button" class="btn btn-success" onclick="Seleccion_Articulo(<%= producto.id %>,<%= producto.laboratorio.id %>)" data-toggle="modal" data-target="#exampleModalLong"><span class="glyphicon glyphicon-check" aria-hidden="true"></span> Añadir Producto</button>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-footer">
         <%= bootstrap_form_for(@pro_far) do |f| %>
            <div class="field">
              <%= f.collection_select :disponibilidad_id, Disponibilidad.all, :id, :nombre %>
               <%= f.hidden_field :producto_id %>
               <%= f.hidden_field :farmacium_id %>
            </div>
             <div class="actions">
              <input type="submit" name="commit" value="Añadir Producto" class="btn btn-default" />
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>