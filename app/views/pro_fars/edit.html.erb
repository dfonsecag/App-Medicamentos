<div class="col-lg-12 col-md-12  col-xs-12 col-sm-12">

     <a href="/pro_farmacia/<%= @pro_far.producto.laboratorio.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>Productos Farmacia
          </a>
          
 </div>
<h1 class="text-center">Editar disponibilidad de Producto.</h1>

<%= bootstrap_form_for(@pro_far) do |f| %>
 <div class="col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3  col-xs-12 col-sm-10">
   <div class="form-group">
    <label for="exampleInputEmail1">Nombre Producto</label>
    <input type="text" class="form-control"  value="<%= @pro_far.producto.nombre %>" disabled >
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Nombre Laboratorio</label>
    <input type="text" class="form-control" value="<%= @pro_far.producto.laboratorio.nombre %>" disabled >
  </div>
  <div class="field">
   <%= f.collection_select :disponibilidad_id, Disponibilidad.all, :id, :nombre %>
  </div>

 <%= f.hidden_field :producto_id, :value => @pro_far.producto.laboratorio.id %>
  <div class="actions">
    <input type="submit" name="commit" value="Actualizar Producto Farmacia" class="btn btn-success">
  </div>
<% end %>
</div>


