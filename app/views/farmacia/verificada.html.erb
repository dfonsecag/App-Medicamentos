

<h1 class="text-center">Lista de Farmacias por verificadas</h1>
<div class="col-lg-10 col-md-10  col-xs-12 col-sm-12">
<%=  form_tag '/farmacias/busqueda' , :class => 'form-inline' do %>
<div class="form-group">
    <label for="exampleInputEmail1">Búsqueda</label>
    <input type="text" class="form-control"  placeholder="Nombre" name="nombre">
  </div>
  <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
<% end %>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cedula Jurídica</th>
      <th>Sucursal</th>
      <th>Direccion</th>
      <th>Correo</th>
      <th>Telefono1</th>
      <th>Telefono2</th>
      <th>Cantidad de Laboratorios</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @farmacia.each do |farmacium| %>
      <tr>
        <td><%= farmacium.nombre %></td>
        <td><%= farmacium.cedulaJur %></td>
        <td><%= farmacium.sucursal %></td>
        <td><%= farmacium.direccion %></td>
        <td><%= farmacium.correo %></td>
        <td><%= farmacium.telefono1 %></td>
        <td><%= farmacium.telefono2 %></td>
        <td><%= farmacium.cant_lab%></td>
        <td><a href="/farmacia/<%= farmacium.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar
          </a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8" >
        <%= will_paginate @productos, renderer: BootstrapPagination::Rails %>
    </div>


