



<h1 class="text-center"> <span class="label label-default">Lista de Farmacias Verificadas</span></h1>
<br>

  <div class="col-lg-3 col-md-3 col-xs-4 col-sm-4 ">
   <input type="text" class="form-control"  placeholder="Nombre" name="nombre" id="nombre">
  </div>
 <div class="col-lg-2 col-md-2 col-xs-3 col-sm-3">
  <button type="submit" class="btn btn-success" onclick="busquedaFarmaciasVerificadas();"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
  </div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cedula Jur√≠dica</th>
      <th>Sucursal</th>
      <th>Direccion</th>
      <th>Correo</th>
      <th>Telefono1</th>
      <th>Telefono2</th>
      <th>Laboratorios Disponibles</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @farmacia.each do |farmacium| %>
      <tr>
        <td><%= farmacium.nombre %></td>
        <td><%= farmacium.cedulaJur %></td>
        <td><%= farmacium.sucursal %></td>
        <td><%= farmacium.direccion %></td>
        <td><%= farmacium.correo %></td>
        <td><%= farmacium.telefono1 %></td>
        <td><%= farmacium.telefono2 %></td>
        <td><%= farmacium.cant_lab%></td>
        <td><a href="/farmacia/<%= farmacium.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar
          </a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8" >
