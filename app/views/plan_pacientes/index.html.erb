<script type="text/javascript">
  var msj = "<%= notice %>";
  if(msj!='')
    swal(msj);
  
</script>
<h1 class="text-center">Lista de Plan Pacientes</h1>
<div class="col-lg-8 col-md-8 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Nombre Plan Paciente</th>
      <th>Laboratorio</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @plan_pacientes.each do |plan| %>
      <tr id="<%= plan.id %>">
        <td width="25%"><%= plan.nombre %></td>
        <td width="44%"><%= plan.laboratorio.nombre %></td>
        <td width="35%">
          <a href="/plan_pacientes/<%= plan.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar
          </a>
          <a href="/plan_pacientes/<%= plan.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
          </a>
           <button class="btn btn-danger" onclick="deletePlanPaciente(<%= plan.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="col-md-6 col-md-offset-4  col-xs-12 col-sm-10">
<%= link_to 'Nuevo plan paciente', new_plan_paciente_path, :class => "btn btn-success"%>


</div>


