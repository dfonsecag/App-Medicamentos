<h1 class="text-center">Lista de Plan Pacientes</h1>
<div class="col-lg-8 col-md-8 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<%=  form_tag '/plan_pacientes/busqueda' , :class => 'form-inline' do %>
<div class="form-group">
    <label for="exampleInputEmail1">BÃºsqueda</label>
    <input type="text" class="form-control"  placeholder="Nombre" name="nombre">
  </div>
  <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
<% end %>
</div>
<div class="col-lg-8 col-md-8 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Nombre Plan Paciente</th>
      <th>Laboratorio</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @plan_pacientes.each do |plan| %>
      <tr id="<%= plan.id %>">
        <td width="24%"><%= plan.nombre %></td>
        <td width="40%"><%= plan.laboratorio.nombre %></td>
        <td width="40%">
          <a href="/plan_pacientes/<%= plan.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar
          </a>
          <a href="/plan_pacientes/<%= plan.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
          </a>
           <button class="btn btn-danger" onclick="deletePlanPaciente(<%= plan.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

</div>
<div class="col-md-6 col-lg-6 col-xs-10 col-sm-10 col-md-offset-2 col-lg-offset-2 ">
<%= link_to 'Nuevo plan paciente', new_plan_paciente_path, :class => "btn btn-success"%>
</div>
 <div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8 paginate" >
        <%= will_paginate @plan_pacientes, renderer: BootstrapPagination::Rails %>
    </div>



