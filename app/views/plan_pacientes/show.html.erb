<div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">
  <h1 class="center">Añadir descripción Paciente</h1>
    
  <%= bootstrap_form_for(@tipo_plan) do |f| %>
   <div class="field">
    <%= f.hidden_field :tipo, :value => 'Paciente' %>
  </div>
  <div class="field">
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
  <%= f.hidden_field :plan_paciente_id, :value => @plan_paciente.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @plan_Paciente_Paciente.each do |plan| %>
      <tr id="<%= plan.id %>">
        <td width="80%"><%= plan.descripcion   %></td>
        <td width="8%">
           <button class="btn btn-danger" onclick="delete_tipoplan(<%= plan.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

