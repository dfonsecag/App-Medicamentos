<script type="text/javascript">
var msj = "<%= notice %>";
  $(document).ready(function() {
  if(msj!='')
    swal(msj, "", "success")

});
</script>
<h1 class="text-center">Lista de  Laboratorios añadidos a la farmacia:</h1>
<div class="col-lg-8 col-md-8 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @laboratorios.each do |laboratorio| %>
      <tr id="<%= laboratorio.id %>">
        <td width="22%"><%= laboratorio.laboratorio.nombre %></td>
        <td width="22%"><%= laboratorio.laboratorio.descripcion %></td>
        <td width="28%">
          <a href="/lab_fars/<%= laboratorio.id %>" class="btn btn-success">
         <span class="glyphicon glyphicon-check" aria-hidden="true"></span> Añadir Productos
          </a>
           <a href="/lab_fars/<%= laboratorio.id %>" class="btn btn-success">
         <span class="glyphicon glyphicon-check" aria-hidden="true"></span> Mostrar Productos
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
