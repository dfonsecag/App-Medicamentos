<h1 class="text-center">Lista de  Laboratorios añadidos a la farmacia:</h1>
<div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Acciones</th>
      <th>Activo Laboratorio</th>
    </tr>
  </thead>

  <tbody>
    <% @laboratorios.each do |laboratorio| %>
      <tr id="<%= laboratorio.id %>">
        <td width="15%"><%= laboratorio.laboratorio.nombre %></td>
        <td width="15%"><%= laboratorio.laboratorio.descripcion %></td>
        <td width="25%">         
           <a href="/pro_farmacia/<%= laboratorio.laboratorio.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar Productos
          </a>
           <a href="/pro_fars/<%= laboratorio.laboratorio.id %>" class="btn btn-success">
         <span class="glyphicon glyphicon-check" aria-hidden="true"></span> Añadir Productos
          </a>
        </td>
         <td width="20%">
         <% if laboratorio.activo == true %> 
             <input type="checkbox" id="<%= laboratorio.laboratorio.id %>" name="my-checkbox" checked  data-on-text="Activado" data-off-text="Desactivado" data-on-color="success" data-off-color="danger">
         <% else %> 
            <input type="checkbox" id="<%= laboratorio.laboratorio.id %>" name="my-checkbox"  data-on-text="Activado" data-off-text="Desactivado" data-on-color="success" data-off-color="danger">
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

