<p id="notice"><%= notice %></p>

<h1>Listing Productos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sustancia</th>
      <th>Presentacion</th>
      <th>Oferta</th>
      <th>Laboratorio</th>
      <th>Plan paciente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.sustancia %></td>
        <td><%= producto.presentacion %></td>
        <td><%= producto.oferta %></td>
        <td><%= producto.laboratorio %></td>
        <td><%= producto.plan_paciente %></td>
        <td><%= link_to 'Show', producto %></td>
        <td><%= link_to 'Edit', edit_producto_path(producto) %></td>
        <td><%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

