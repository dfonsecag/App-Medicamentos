<h1 class="text-center">Lista de Productos</h1>
<div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
<%=  form_tag '/producto/busqueda' , :class => 'form-inline' do %>
<div class="form-group">
    <label for="exampleInputEmail1">Búsqueda</label>
    <input type="text" class="form-control"  placeholder="Nombre" name="nombre">
  </div>
  <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
<% end %>
</div>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sustancia</th>
      <th>Presentación</th>     
      <th>Laboratorio</th>
      <th>Plan paciente</th>
       <th>Oferta</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td width="12%"><%= producto.nombre %></td>
        <td width="12%"><%= producto.sustancium.descripcion %></td>
        <td width="12%"><%= producto.presentacion.descripcion %></td>       
        <td width="12%"><%= producto.laboratorio.nombre %></td>
        <% if producto.plan_paciente != nil %> 
           <td width="12%"><%= producto.plan_paciente.nombre %></td>
         <% else producto.plan_paciente != nil %> 
           <td width="12%"></td>
        <% end %>
        
        <td width="11%"><%= producto.oferta %></td>
        <td width="35%">
          <a href="/productos/<%= producto.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar
          </a>
          <a href="/productos/<%= producto.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
          </a>
           <button class="btn btn-danger" onclick="delete_producto(<%= producto.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="col-md-12 col-lg-12 col-xs-12 col-sm-12  ">
<%= link_to 'Nuevo producto', new_producto_path, :class => "btn btn-success"%>
</div>
 <div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8 paginate" >
        <%= will_paginate @productos, renderer: BootstrapPagination::Rails %>
    </div>