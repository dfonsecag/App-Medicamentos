<%= bootstrap_form_for(@producto) do |f| %>
 
<div class="col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3  col-xs-12 col-sm-12">
  <div class="field">
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.collection_select :sustancium_id, Sustancium.all, :id, :descripcion, label: "Sustancia" %>
  </div>
  <div class="field">
    <%= f.collection_select :presentacion_id, Presentacion.all, :id, :descripcion, label: "Presentación" %>
  </div> 
  <div class="field">    
    <%= f.collection_select :laboratorio_id, Laboratorio.all, :id, :nombre} %>
  </div>
  <div class="field">    
      <input type="checkbox" id="plan" onclick="Hablilitar();" >Tiene Plan Paciente<br>
  </div>
  </div>
  <br>
  <div class="col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3  col-xs-12 col-sm-12">
  <div class="col-md-5 col-lg-5  col-xs-5 col-sm-5">
  <div class="field" id="plan_paciente" style="display:none">    
    <%= f.select :plan_paciente_id,[]%>
  </div>
  </div>
    <div class="col-md-2 col-lg-2  col-xs-2 col-sm-2 ">
   <div class="field" id="divoferta1" style="display:none">
    <%= f.number_field :oferta1, label: "Compra" , :value =>0%>
  </div>
  </div>

  <div class="col-md-2 col-lg-2  col-xs-2 col-sm-2">
    <div class="field" id="divoferta2" style="display:none">
    <%= f.number_field :oferta2  ,label: "Regalía", :value =>0%>
  </div>
  </div>
  </div>



  <div class="col-md-9 col-lg-9 col-xs-12 col-sm-12  col-md-offset-3 col-lg-offset-3">
  <div class="actions">
 <%= f.submit class: 'btn btn-success ' %>
  </div>
  </div>
<% end %>
</div>