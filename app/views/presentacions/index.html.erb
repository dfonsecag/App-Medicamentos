<script type="text/javascript">
var msj = "<%= notice %>";
  $(document).ready(function() {
  if(msj!='')
    swal(msj, "", "success")

});
</script>
<h1 class="text-center"> <span class="label label-default">Presentación de productos</span></h1>
<br>

  <div class="col-lg-3 col-md-3 col-xs-4 col-sm-4 col-md-offset-2 col-lg-offset-2">
   <input type="text" class="form-control"  placeholder="Nombre" name="nombre" id="nombre">
  </div>
 <div class="col-lg-2 col-md-2 col-xs-3 col-sm-3">
  <button type="submit" class="btn btn-success" onclick="busquedaPresentacion();"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
  </div>


<div class="col-lg-7 col-md-7 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Descripción</th>
      <th>Activo</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @presentacions.each do |presentacion| %>
      <tr id="<%= presentacion.id %>">
        <td width="36%"><%= presentacion.descripcion %></td>
        <td width="15%"> <% if presentacion.activo == true %> 

            <label><input type="checkbox" value="" onclick="Activo(<%= presentacion.id %>, <%= presentacion.activo %>, 'presentacion');" checked>Activo</label>
         <% else %> 

             <label><input type="checkbox" value="" onclick="Activo(<%= presentacion.id %>, <%= presentacion.activo %>,'presentacion');">Activo</label>
        <% end %></td>
        <td width="20%">
          <a href="/presentacions/<%= presentacion.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          </a>
          <a href="/presentacions/<%= presentacion.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          </a>
           <button class="btn btn-danger" onclick="delete_presentacion(<%= presentacion.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


    <div class="col-md-6 col-lg-6 col-xs-12 col-sm-12 col-md-offset-2 col-lg-offset-2 ">
<%= link_to 'Nueva Presentacion', new_presentacion_path, :class => "btn btn-success"%>
</div>
 <div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8" >
        <%= will_paginate @presentacions, renderer: BootstrapPagination::Rails %>
    </div>
