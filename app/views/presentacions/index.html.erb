<h1 class="text-center">Lista de Presentacion de productos.</h1>
<div class="col-lg-8 col-md-8 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<%=  form_tag '/presentaciones/busqueda' , :class => 'form-inline' do %>
<div class="form-group">
    <label for="exampleInputEmail1">Búsqueda</label>
    <input type="text" class="form-control"  placeholder="Nombre" name="nombre">
  </div>
  <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
<% end %>
</div>
<div class="col-lg-7 col-md-7 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Descripción</th>
      <th>Activo</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @presentacions.each do |presentacion| %>
      <tr id="<%= presentacion.id %>">
        <td width="36%"><%= presentacion.descripcion %></td>
        <td width="34%"> <% if presentacion.activo == true %> 
             <input type="checkbox" id="<%= presentacion.id %>" name="my-checkbox" checked  data-on-text="Activo" data-off-text="Desactivo" data-on-color="success" data-off-color="danger">
         <% else %> 
            <input type="checkbox" id="<%= presentacion.id %>" name="my-checkbox"  data-on-text="Activo" data-off-text="Desactivo" data-on-color="success" data-off-color="danger">
        <% end %></td>
        <td width="20%">
          <a href="/presentacions/<%= presentacion.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          </a>
          <a href="/presentacions/<%= presentacion.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          </a>
           <button class="btn btn-danger" onclick="delete_presentacion(<%= presentacion.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


