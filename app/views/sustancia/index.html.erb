<script type="text/javascript">
var msj = "<%= notice %>";
  $(document).ready(function() {
  if(msj!='')
    swal(msj, "", "success")

});
</script>

<h1 class="text-center">Lista de Sustancia de productos.</h1>
<div class="col-lg-7 col-md-7 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<%=  form_tag '/sustancias/busqueda' , :class => 'form-inline' do %>
<div class="form-group">
    <label for="exampleInputEmail1">Búsqueda</label>
    <input type="text" class="form-control"  placeholder="Nombre" name="nombre">
  </div>
  <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
<% end %>
</div>
<div class="col-lg-7 col-md-7 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @sustancia.each do |sustancia| %>
      <tr id="<%= sustancia.id %>">
        <td width="52%"><%= sustancia.descripcion %></td>
        <td width="35%">
          <a href="/sustancia/<%= sustancia.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar
          </a>
          <a href="/sustancia/<%= sustancia.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
          </a>
           <button class="btn btn-danger" onclick="delete_sustancia(<%= sustancia.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
    <div class="col-md-7 col-lg-7 col-xs-12 col-sm-12 col-md-offset-2 col-lg-offset-2 ">
<%= link_to 'Nueva Sustancia', new_sustancium_path , :class => "btn btn-success"%>
</div>
 <div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8 paginate" >
        <%= will_paginate @sustancia, renderer: BootstrapPagination::Rails %>
    </div>


