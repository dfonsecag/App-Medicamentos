<h1 class="text-center"> <span class="label label-default">Sustancias de productos</span></h1>
<br>

  <div class="col-lg-3 col-md-3 col-xs-4 col-sm-4 col-md-offset-2 col-lg-offset-2">
   <input type="text" class="form-control"  placeholder="Nombre" name="nombre" id="nombre">
  </div>
 <div class="col-lg-2 col-md-2 col-xs-3 col-sm-3">
  <button type="submit" class="btn btn-success" onclick="busquedaSustancias();"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
  </div>

<div class="col-lg-7 col-md-7 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Descripci√≥n</th>
      <th>Activo</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @sustancia.each do |sustancia| %>
      <tr id="<%= sustancia.id %>">
        <td width="38%"><%= sustancia.descripcion %></td>
        <td width="15%"> <% if sustancia.activo == true %> 

            <label><input type="checkbox" value="" onclick="Activo(<%= sustancia.id %>, <%= sustancia.activo %>, 'sustancia');" checked>Activo</label>
         <% else %> 

             <label><input type="checkbox" value="" onclick="Activo(<%= sustancia.id %>, <%= sustancia.activo %>,'sustancia');">Activo</label>
        <% end %></td>
        <td width="35%">
          <a href="/sustancia/<%= sustancia.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> 
          </a>
          <a href="/sustancia/<%= sustancia.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> 
          </a>
           <button class="btn btn-danger" onclick="delete_sustancia(<%= sustancia.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
    <div class="col-md-7 col-lg-7 col-xs-12 col-sm-12 col-md-offset-2 col-lg-offset-2 ">
<%= link_to 'Nueva Sustancia', new_sustancium_path , :class => "btn btn-success"%>
</div>
 <div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8 " >
        <%= will_paginate @sustancia, renderer: BootstrapPagination::Rails %>
    </div>


