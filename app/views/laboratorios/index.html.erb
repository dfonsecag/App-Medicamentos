  </div>
 <div class="col-lg-2 col-md-2 col-xs-3 col-sm-3">
  <button type="submit" class="btn btn-success" onclick="busqueda();"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
  </div>

<div class="col-lg-8 col-md-8 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripci√≥n</th>
      <th>Activo</th>
      <th>Acciones</th>
      
    </tr>
  </thead>

  <tbody>
    <% @laboratorios.each do |laboratorio| %>
      <tr id="<%= laboratorio.id %>">
        <td width="15%"><%= laboratorio.nombre %></td>
        <td width="40%"><%= laboratorio.descripcion %></td>
      <td width="15%"> <% if laboratorio.activo == true %> 

            <label><input type="checkbox" value="" onclick="Activo(<%= laboratorio.id %>, <%= laboratorio.activo %>, 'laboratorio');" checked>Activo</label>
         <% else %> 

             <label><input type="checkbox" value="" onclick="Activo(<%= laboratorio.id %>, <%= laboratorio.activo %>,'laboratorio');">Activo</label>
        <% end %></td>
         <td width="20%">
          <a href="/laboratorios/<%= laboratorio.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          </a>
          <a href="/laboratorios/<%= laboratorio.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          </a>
           <button class="btn btn-danger" onclick="delete_laboratorio(<%= laboratorio.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </button>
        </td>
         
       
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
