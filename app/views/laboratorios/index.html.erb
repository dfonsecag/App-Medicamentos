<script type="text/javascript">
var msj = "<%= notice %>";
  $(document).ready(function() {
  if(msj!='')
    swal(msj, "", "success")

});
</script>
<h1 class="text-center">Lista de  Laboratorios</h1>
<div class="col-lg-6 col-md-6 col-xs-12 col-sm-6 col-md-offset-2 col-lg-offset-2">
<%=  form_tag '/laboratorio/busqueda' , :class => 'form-inline' do %>
<div class="form-group">
    <label for="exampleInputEmail1">Búsqueda</label>
    <input type="text" class="form-control"  placeholder="Nombre" name="nombre">
  </div>
  <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar</button>
<% end %>
</div>
<div class="col-lg-8 col-md-8 col-md-offset-2 col-lg-offset-2  col-xs-12 col-sm-12">
<table class="table table-striped table-condensed"">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @laboratorios.each do |laboratorio| %>
      <tr id="<%= laboratorio.id %>">
        <td width="20%"><%= laboratorio.nombre %></td>
        <td width="40%"><%= laboratorio.descripcion %></td>
        <td width="35%">
          <a href="/laboratorios/<%= laboratorio.id %>" class="btn btn-info">
         <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar
          </a>
          <a href="/laboratorios/<%= laboratorio.id %>/edit" class="btn btn-success">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar
          </a>
           <button class="btn btn-danger" onclick="delete_laboratorio(<%= laboratorio.id %>)"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Eliminar</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-md-6 col-lg-6 col-xs-12 col-sm-12 col-md-offset-2 col-lg-offset-2 ">
<%= link_to 'Nuevo Laboratorio', new_laboratorio_path, :class => "btn btn-success"%>
</div>
 <div class="col-lg-8 col-md-8 col-md-offset-4 col-lg-offset-4 col-xs-offset-4 col-sm-offset-4 col-xs-8 col-sm-8" >
        <%= will_paginate @laboratorios, renderer: BootstrapPagination::Rails %>
    </div>

